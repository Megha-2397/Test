<section class="bg-light">
  <div class="container px-3">
    <div class="login-pages shadow  my-5">
      <div class="modal-header px-0 border-0 mb-4">
        <h5 class="modal-title">Change Password</h5>
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="form-group">
            <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "Password" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autofocus: true, class: "form-control", placeholder: "Confirm password" %>
          </div>
          <div class="text-center mt-3">
            <%= f.submit "Change password", class: "btn btn-primary btn-md px-8 mb-5" %>
          </div>

      <% end %>
    </div>
  </div>
</section>
<%#= render "devise/shared/links" %>
