<section class="bg-light">
  <div class="container px-3">
    <div class="login-pages shadow  my-5">
      <div class="modal-header px-0 border-0 mb-4">
        <h4 class="modal-title">Change Password</h4>
      </div>
      <div class="card-body p-0">
        <%= form_for(resource, as: resource_name, url: changed_password_path(resource_name), html: {method: :put}) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group mb-4">
              <label>Current Password</label>
              <%= f.password_field :current_password, autocomplete: "off", class: "input-box form-control mb-3", placeholder: "Current Password", required: true %>
            </div>
            <div class="form-group">
              <%= f.label "Password", class: "mb-0" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "input-box form-control mb-3", placeholder: "New Password", required: true %>
            </div>
            <div class="form-group ">
              <%= f.label "Confirm Password", class: "mb-0 text-capitalize" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-box form-control mb-3", placeholder: "Confirm Password", required: true %>
            </div>
            <div class="text-center px-5 mt-5">
              <%= f.submit "Change my password", class: "btn btn-primary mb-3" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</section>